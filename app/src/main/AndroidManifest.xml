        <activity
            android:name=".QRGenerating.TelGnrActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QRGenerating.UrlGnrActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QRGenerating.SmsGnrActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QRGenerating.GeoLocatioGnrActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".QRGenerating.MailEnterActivity" android:parentActivityName=".MainActivity" android:label="E-Mail"/>
