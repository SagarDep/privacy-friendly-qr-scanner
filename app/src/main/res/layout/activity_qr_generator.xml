<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secuso.privacyFriendlyCodeScanner.qrscanner.QRGenerating.QrGenerator">


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/radioMail">

        <RadioButton
            android:id="@+id/radioMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <RadioButton
            android:id="@+id/radioTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel" />
        <RadioButton
            android:id="@+id/radioUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL" />

        <RadioButton
            android:id="@+id/radioSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SMS" />
    </RadioGroup>

    <EditText
        android:id="@+id/gnResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/button_fullwidth"
        android:text="Generate"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/editTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gnResult"
        android:layout_marginStart="31dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTel"
        android:layout_alignTop="@+id/editTel"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTel"
        android:layout_alignBottom="@+id/editTel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:text="Phone number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginEnd="18dp"
        android:text="Text" />

</RelativeLayout>
